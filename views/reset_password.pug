extends layout

block content
	section#reset.text-dark
		.container.pt-3
			.row.justify-content-sm-center
				.col-sm-6.col-md-6
					.card.border-info.text-center
						.card-header
							| Reset Password
							include ./messages.pug
						.card-body
							form.form-signin(action='/reset_password/'+id method='post')
								fieldset
									legend Reset Password
									input.form-control.mb-2(type='password' name='password' placeholder='Password' required)
									input.form-control(type='password' name='confirm' placeholder='Confirm Password' required)
									input.btn.btn-lg.btn-primary.btn-block.mb-1(type='submit')