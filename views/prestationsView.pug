extends dashboard

mixin prestation(prestation)
	tr
		td= prestation.titre
		td= prestation.sous_titre
		td= prestation.description
		td= prestation.prix
		td= prestation.duration
		td.w-25
			img.img-fluid.img-thumbnail.rounded-circle.w-25(src='../'+prestation.imagePath alt='prestation image')
		td.row
			a.btn.btn-info.btn-sm.mx-1(href='/dashboard/prestations/'+prestation._id role='button') View
			a.btn.btn-warning.btn-sm.mx-1(href='/dashboard/prestations/update/'+prestation._id role='button') Update
			form(action='/dashboard/prestations?_method=DELETE' method='post')
				input(type='hidden' name='id' value=prestation._id required)
				button.btn.btn-danger.btn-sm.mx-1(type='submit') Delete

block data
	#users.table-responsive.my-2.p-2
		table.table.table-striped
			thead.thead-inverse
				tr
					th Titre
					th sous-titre
					th description
					th prix
					th dur√©e
					th Image
					th Action
			tbody
				each prestation in data
					+prestation(prestation)