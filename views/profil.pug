extends layout

block content
	section#profil.text-dark
		.container.py-3
			.row.justify-content-sm-center
				.col-sm-6.col-md-6
					.card.border-info
						.card-header.text-center
							| Profil Info							
						.card-body
							.row.justify-content-sm-center
								.col-sm-2.col-md-2
									if user.avatar 
										img.img-fluid.img-thumbnail.rounded-circle(src=user.avatar alt='profil image')
									else 
										span
											i.fas.fa-user
								.col-sm-10.col-md-10
									p Username : #{user.username}
									p Email : #{user.email}
							.row.justify-content-sm-center
								.col-sm-2.col-md-2
									a.btn.btn-primary.mt-4(href='/profil/edit') Edit