extends layout

block content
	section#forgot.text-dark
		.container.py-3
			.row.justify-content-sm-center
				.col-sm-6.col-md-6
					.card.border-info.text-center
						.card-header
							| Forgot password							
						.card-body
							form.form-signin(action='/forgot' method='post')
								fieldset
									legend Reset password form
									input.form-control.mb-2(type='email' name='email' placeholder='Email' required autofocus)
									input.btn.btn-lg.btn-primary.btn-block.mb-1(type='submit')
									