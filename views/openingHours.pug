extends dashboard

block data
	section.text-dark.w-100
		.container.py-3
			.row.justify-content-sm-center
				.col-sm-12.col-md-12
					.card.border-info.text-center
						.card-header
							| Create Prestation
						.card-body
							form(action='/dashboard/opening_hours' method='post')
								fieldset
									legend Opening Hours
									.row.align-items-center.mt-4
										.col
											input.form-control(type='text' name='opening_hours' placeholder='Opening Hours' required)
									.row.align-items-center.mt-4
										.col
											select.form-control(name='user_id' required)
												each admin in users
													option(value=admin._id)= admin.username
									.row.justify-content-start.mt-4
										.col
											input.btn.btn-primary.mt-4(type='submit')